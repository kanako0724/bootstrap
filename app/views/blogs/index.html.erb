<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Content</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @blogs.each do |blog| %>
          <tr>
            <td><%= blog.title %></td>
            <td><%= blog.content %></td>
            <td><%= link_to 'Show', blog, class: 'btn btn-default btn-sm btn-primary' %></td>
            <td><%= link_to 'Edit', edit_blog_path(blog), class: 'btn btn-default btn-sm btn-primary' %></td>
            <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-sm btn btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <br>
    
    <%= link_to 'New Blog', new_blog_path, class: 'btn btn-default btn-sm btn-primary' %>
  </div>
</div>
