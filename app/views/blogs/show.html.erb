<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p>
      <strong>Title:</strong>
      <%= @blog.title %>
    </p>
    
    <p>
      <strong>Content:</strong>
      <%= @blog.content %>
    </p>
    
    <% unless @blog.user == current_user %>
      <% if @favorite.present? %>
        <%= link_to 'お気に入り解除する', favorite_path(blog_id: @blog.id), method: :delete, class: 'btn btn-danger' %>
      <% else %>
        <%= link_to 'お気に入りする', favorites_path(blog_id: @blog.id), method: :post, class: 'btn btn-primary' %>
      <% end %>
    <% end %>
    
    </br>
    
    <% if current_user.id == @blog.user.id %>
      <%= link_to 'Edit', edit_blog_path(@blog) %> |
    <% end %>
    <%= link_to 'Back', blogs_path %>
  </div>
</div>

